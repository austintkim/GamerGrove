{
  // Global settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1500,

  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.fixAll.eslint": "always",
    "source.fixAll.ruff": "always",
    "source.organizeImports": "always"
  },

  // Language-specific formatter overrides
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "yaml"
  ],
  "eslint.nodePath": "${workspaceFolder}/node_modules",
  "prettier.prettierPath": "${workspaceFolder}/node_modules/prettier",
  "eslint.workingDirectories": ["${workspaceFolder}/ghi"],

  // Python
  "python.defaultInterpreterPath": "/Users/austinkim/hack-reactor/projects/gamer-grove/.venv/bin/python",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingTypeStubs": "none"
  },

  // Ruff
  "ruff.enable": true
}
