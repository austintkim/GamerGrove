FROM python:3.10-bullseye

RUN python -m pip install --upgrade pip

# Install Poetry
RUN pip install poetry

ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.9.0/wait /wait
RUN chmod +x /wait

WORKDIR /app

# Keep poetry virtualenv inside project folder so it's accessible reliably
ENV POETRY_VIRTUALENVS_IN_PROJECT=true
ENV PATH="/app/.venv/bin:$PATH"

# Copy poetry files first and install dependencies
COPY pyproject.toml poetry.lock* /app/

RUN poetry install --no-root

# Copy backend source code
COPY . /app

ENV PYTHONPATH=/app

# Run migrations and start server using poetry virtualenv
CMD /wait && poetry run python -m api.migrations up && poetry run uvicorn api.main:app --reload --host 0.0.0.0
